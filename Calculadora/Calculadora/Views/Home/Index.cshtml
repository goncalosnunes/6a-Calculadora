
@{
    ViewBag.Title = "Calculadora";
}

<h2>A minha calculadora</h2>

@*inicio da calculadora*@

@using(Html.BeginForm()){@*<form></form>*@
@* criar a tabela com os botões *@

<table>

    <tr>
        <td colspan="5">
            <input type="text" readonly="readonly" name="visor" value="@ViewBag.Resposta"/>
        </td>
    </tr>
    <tr>
        <td> <input type="submit" name="btn" value="7" /> </td>
        <td> <input type="submit" name="btn" value="8" /> </td>
        <td> <input type="submit" name="btn" value="9" /> </td>
        <td> <input type="submit" name="btn" value=":" /> </td>
        <td> <input type="submit" name="btn" value="+/-" /> </td>
    </tr>
    <tr>
        <td> <input type="submit" name="btn" value="4" /> </td>
        <td> <input type="submit" name="btn" value="5" /> </td>
        <td> <input type="submit" name="btn" value="6" /> </td>
        <td> <input type="submit" name="btn" value="x" /> </td>
        <td> <input type="submit" name="btn" value="C" class="btn btn-danger"/> </td>
    </tr>
    <tr>
        <td> <input type="submit" name="btn" value="1" /> </td>
        <td> <input type="submit" name="btn" value="2" /> </td>
        <td> <input type="submit" name="btn" value="3" /> </td>
        <td> <input type="submit" name="btn" value="-" /> </td>
        <td rowspan="2"> <input  type="submit" name="btn" value="=" /> </td>
    </tr>
    <tr>
        <td colspan="2"> <input type="submit" name="btn" value="0" /> </td>
        <td> <input type="submit" name="btn" value="," /> </td>
        <td> <input type="submit" name="btn" value="+" /> </td>
    </tr>
</table>
}
